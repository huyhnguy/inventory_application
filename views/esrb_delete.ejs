<%- include('./partials/head') %>

<body>

  <%- include('./partials/header') %>
  
  <main>
    <h2><%= esrb.name %></h2>
    <% if (esrb_games.length) { %>
        <p><strong>Delete the following games before attempting to delete this esrb.</strong></p>
        <ul>
            <% esrb_games.forEach((game) => { %>
            <li><a href="<%= game.url %>"><%= game.name %></a> | $<%= game.price %></li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>Do you really want to delete this Esrb?</p>
        <form action="" method="post">
            <div>
                <input type="hidden" name="esrbid" value="<%= esrb._id %>">
            </div>
            <input type="submit" value="Delete">
        </form>
    <% } %>
  </main>

</body>

<%- include('./partials/footer') %>