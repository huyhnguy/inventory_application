<%- include('./partials/head') %>

<body>

  <%- include('./partials/header') %>
  
    <form action="" method="POST">
        <h2><%= title %></h2>
        <div>
            <label for="name">Platform:</label>
            <input 
                type="text" 
                id="name" 
                required
                name="name"
                value="<%= platform === undefined ? '' : platform.name %>"
            >
        </div>
        <div>
            <label for="description">Description:</label>
            <input 
                type="text" 
                id="description" 
                required
                name="description"
                value="<%= platform === undefined ? '' : platform.description %>"
            >
        </div>
        <input type="submit" value="Submit">
    </form>

    <% if (errors) { %>
        <ul>
            <% errors.forEach((error) => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

</body>

<%- include('./partials/footer') %>