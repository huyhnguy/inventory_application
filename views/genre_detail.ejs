<%- include('./partials/head') %>

<body>

  <%- include('./partials/header') %>
  
  <main>
      <h2><%= genre.name %></h2>
      <% if (genre_games.length) { %>
        <ul>
          <% genre_games.forEach((game) => { %>
            <li><a href="<%= game.url %>"><%= game.name %></a> | $<%= game.price %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>There are no games in this genre.</p>
      <% } %>
      <hr>
      <p><a href="<%= genre.url+'/delete' %>">Delete Genre</a></p>
  </main>

</body>

<%- include('./partials/footer') %>